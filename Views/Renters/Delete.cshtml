@model EnterpriseManagementApp.Models.Renter

@{
    ViewData["Title"] = "Delete";
}

<div class="delete-wrapper">
    <header class="delete-header">
        <h1 class="delete-title">Delete Renter</h1>
        <h3 class="delete-subtitle">Are you sure you want to delete this renter?</h3>
    </header>

    <div class="delete-container">
        <h4>Renter</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ContactNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactNumber)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="RenterId" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a href="@Url.Action("Index", "Renters")" class="btn btn-back"><i class="fas fa-arrow-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>

<style>
    /* Wrapper */
    .delete-wrapper {
        max-width: 900px;
        margin: 40px auto;
        padding: 0 20px;
    }

    /* Header */
    .delete-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .delete-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #d9534f;
    }

    .delete-subtitle {
        font-size: 1.2rem;
        color: #666;
        margin-top: 10px;
    }

    /* Delete Container */
    .delete-container {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    dl.row {
        margin-bottom: 20px;
    }

    dt {
        font-weight: 600;
        color: #333;
    }

    dd {
        color: #555;
        font-size: 1rem;
    }

    .form-group {
        text-align: center;
        margin-top: 20px;
    }

    /* Buttons */
    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 6px;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        margin-right: 10px;
    }

    .btn-danger {
        background-color: #d9534f;
        color: white;
    }

    .btn-back {
        background-color: #6c757d;
        color: white;
    }

    .btn:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-danger:hover {
        background-color: #c9302c;
    }

    .btn-back:hover {
        background-color: #5a6268;
    }

    /* Icon Styling */
    .btn i {
        margin-right: 8px;
    }
</style>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
