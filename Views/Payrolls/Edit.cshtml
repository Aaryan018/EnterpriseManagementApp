@model Payroll

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Payroll</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PayrollId" />
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayrollGenerate" class="control-label"></label>
                <input asp-for="PayrollGenerate" class="form-control" />
                <span asp-validation-for="PayrollGenerate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPay" class="control-label"></label>
                <input asp-for="TotalPay" class="form-control" />
                <span asp-validation-for="TotalPay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegularHours" class="control-label"></label>
                <input asp-for="RegularHours" class="form-control" />
                <span asp-validation-for="RegularHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OvertimeHours" class="control-label"></label>
                <input asp-for="OvertimeHours" class="form-control" />
                <span asp-validation-for="OvertimeHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LateTimeHours" class="control-label"></label>
                <input asp-for="LateTimeHours" class="form-control" />
                <span asp-validation-for="LateTimeHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
