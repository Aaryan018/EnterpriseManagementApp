@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-wrapper">
    <header class="dashboard-header">
        <h1 class="dashboard-title">@ViewData["Title"]</h1>
        <p class="dashboard-subtitle">Your centralized hub for asset management</p>
    </header>

    <main class="dashboard-container">
        @if (User.IsInRole("Manager"))
        {
            <section class="dashboard-card manager-card">
                <h2 class="card-title">Welcome, Manager!</h2>
                <p class="card-description">Assets, Renters, Requests, and more with ease.</p>
                <div class="card-actions">
                    <a class="btn btn-primary" href="@Url.Action("Index", "Assets")"><i class="fas fa-building"></i> Assets Management</a>
                    <a class="btn btn-secondary" href="@Url.Action("Index", "Customers")"><i class="fas fa-users"></i> View Renters</a>
                    <a class="btn btn-warning" href="@Url.Action("Index", "Requests")"><i class="fas fa-check-circle"></i>Leave Requests</a>
                    <a class="btn btn-info" href="@Url.Action("Index", "RentChange")"><i class="fas fa-dollar-sign"></i> Rent Changes</a>
                    <a class="btn btn-success" href="@Url.Action("Index", "OccupancyHistories")"><i class="fas fa-history"></i> Occupancy History</a>
                </div>
            </section>
        }
        else if (User.IsInRole("Client"))
        {
            <section class="dashboard-card client-card">
                <h2 class="card-title">Welcome, Client!</h2>
                <p class="card-description">View your rentals and request changes.</p>
                <div class="card-actions">
                    <a class="btn btn-info" href="@Url.Action("Index", "Renters")"><i class="fas fa-home"></i> Your Rentals</a>
                    <a class="btn btn-success" href="@Url.Action("RequestChange", "Renters")"><i class="fas fa-edit"></i> Request Change</a>
                </div>
            </section>
        }
        else
        {
            <section class="dashboard-card default-card">
                <h2 class="card-title">Welcome to Your Dashboard</h2>
                <p class="card-description">Sign in to unlock powerful features tailored to your role.</p>
            </section>
        }
    </main>
</div>

<style>
    /* Reset and Base Styles */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    .dashboard-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Header */
    .dashboard-header {
        text-align: center;
        margin-bottom: 40px;
        animation: fadeIn 0.5s ease-in;
    }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1a237e;
    }

    .dashboard-subtitle {
        font-size: 1.2rem;
        color: #666;
        margin-top: 10px;
    }

    /* Card Container */
    .dashboard-container {
        display: flex;
        justify-content: center;
    }

    .dashboard-card {
        background: linear-gradient(135deg, #ffffff, #f5f7fa);
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        max-width: 600px;
        width: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

    .manager-card {
        border-left: 5px solid #1976d2;
    }

    .client-card {
        border-left: 5px solid #66bb6a;
    }

    .default-card {
        border-left: 5px solid #e0e0e0;
    }

    /* Card Content */
    .card-title {
        font-size: 1.8rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
    }

    .card-description {
        font-size: 1.1rem;
        color: #777;
        margin-bottom: 20px;
    }

    /* Buttons */
    .card-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        padding: 12px 24px;
        font-size: 1rem;
        font-weight: 500;
        text-decoration: none;
        border-radius: 6px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn i {
            margin-right: 8px;
        }

    .btn-primary {
        background-color: #1976d2;
        color: white;
    }

    .btn-secondary {
        background-color: #607d8b;
        color: white;
    }

    .btn-warning {
        background-color: #ff9800;
        color: white;
    }

    .btn-info {
        background-color: #26c6da;
        color: white;
    }

    .btn-success {
        background-color: #66bb6a;
        color: white;
    }

    .btn:hover {
        transform: scale(1.05);
        opacity: 0.95;
    }

    /* Animation */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .dashboard-title

    {
        font-size: 2rem;
    }

    .dashboard-card {
        padding: 20px;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    }
</style>

@section Scripts {
    <!-- Assuming Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>
}
