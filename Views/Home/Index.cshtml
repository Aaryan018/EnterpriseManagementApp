@model IEnumerable<EnterpriseManagementApp.Models.RentChange>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-wrapper">
    <header class="dashboard-header">
        <h1 class="dashboard-title">@ViewData["Title"]</h1>
        <p class="dashboard-subtitle">Your centralized hub for asset management</p>
    </header>

    <main class="dashboard-container">
        @if (User.IsInRole("Manager"))
        {
            <section class="dashboard-card manager-card animate__animated animate__fadeInUp">
                <h2 class="card-title">Welcome, Manager!</h2>
                <p class="card-description">Manage your assets, renters, requests, and more with ease.</p>

                <!-- Action Cards -->
                <div class="action-cards">
                    <a href="@Url.Action("Index", "Assets")" class="action-card assets-card">
                        <i class="fas fa-building"></i>
                        <h3>Assets Management</h3>
                        <p>Oversee and manage all assets efficiently.</p>
                    </a>
                    <a href="@Url.Action("Index", "Customers")" class="action-card renters-card">
                        <i class="fas fa-users"></i>
                        <h3>View Renters</h3>
                        <p>Access details of all renters.</p>
                    </a>
                    <a href="@Url.Action("Index", "Requests")" class="action-card requests-card">
                        <i class="fas fa-check-circle"></i>
                        <h3>Leave Requests</h3>
                        <p>Review and approve leave requests.</p>
                    </a>
                    <a href="@Url.Action("Index", "OccupancyHistories")" class="action-card history-card">
                        <i class="fas fa-history"></i>
                        <h3>Occupancy History</h3>
                        <p>Track past occupancy records.</p>
                    </a>
                </div>

                <!-- Rent Change Requests Section -->
                <h3 class="section-title">Rent Change Requests</h3>
                @if (Model.Any())
                {
                    <div class="table-container">
                        <table class="request-table">
                            <thead>
                                <tr>
                                    <th>Asset Address</th>
                                    <th>Customer Email</th>
                                    <th>Old Rate ($)</th>
                                    <th>New Rate ($)</th>
                                    <th>Reason</th>
                                    <th>Status</th>
                                    <th>Submitted Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model)
                                {
                                    <tr>
                                        <td data-label="Asset Address">@request.Asset?.Address</td>
                                        <td data-label="Customer Email">@request.User?.Email</td>
                                        <td data-label="Old Rate">@request.OldRate</td>
                                        <td data-label="New Rate">@request.NewRate</td>
                                        <td data-label="Reason">@request.Reason</td>
                                        <td data-label="Status">@request.Status @(request.ProcessedDate.HasValue ? $"on {request.ProcessedDate.Value.ToString("g")}" : "")</td>
                                        <td data-label="Submitted Date">@request.SubmittedDate.ToString("g")</td>
                                        <td data-label="Actions">
                                            @if (request.Status == "Pending")
                                            {
                                                <form asp-action="ApproveRequest" method="post" class="action-form">
                                                    <input type="hidden" name="id" value="@request.RentChangeId" />
                                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                                </form>
                                                <form asp-action="RejectRequest" method="post" class="action-form">
                                                    <input type="hidden" name="id" value="@request.RentChangeId" />
                                                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="no-data">No rent change requests found.</p>
                }
            </section>
        }
        else
        {
            <section class="dashboard-card default-card animate__animated animate__fadeInUp">
                <h2 class="card-title">Welcome to Your Dashboard</h2>
                <p class="card-description">Sign in to unlock powerful features tailored to your role.</p>
            </section>
        }
    </main>
</div>

<style>
    /* Base Styles */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        background: #f0f2f5;
        color: #1a1a1a;
        line-height: 1.6;
    }

    .dashboard-wrapper {
        max-width: 1280px;
        margin: 0 auto;
        padding: 30px;
    }

    /* Header */
    .dashboard-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .dashboard-title {
        font-size: 3.5rem;
        font-weight: 800;
        background: linear-gradient(90deg, #1976d2, #42a5f5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -1px;
    }

    .dashboard-subtitle {
        font-size: 1.3rem;
        color: #546e7a;
        margin-top: 12px;
        font-style: italic;
    }

    /* Card Container */
    .dashboard-container {
        display: grid;
        gap: 25px;
        justify-content: center;
    }

    .dashboard-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        padding: 35px;
        width: 100%;
        max-width: 1080px;
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        position: relative;
        overflow: hidden;
    }

        .dashboard-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #1976d2, #64b5f6);
        }

    .manager-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
    }

    .default-card::before {
        background: linear-gradient(90deg, #bdbdbd, #e0e0e0);
    }

    /* Card Content */
    .card-title {
        font-size: 2rem;
        font-weight: 700;
        color: #212121;
        margin-bottom: 15px;
    }

    .card-description {
        font-size: 1.15rem;
        color: #78909c;
        margin-bottom: 30px;
    }

    /* Action Cards */
    /* Action Cards */
    .action-cards {
        display: grid;
        width: 780px;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 40px;
        margin-right: 50px;
        justify-items: center; /* Center items horizontally within each grid cell */
    }

    .action-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%; /* Make the card take the full width of the grid cell */
        max-width: 300px; /* Keep the card at 300px max, but allow it to be centered */
        height: 200px;
        background: linear-gradient(135deg, #ffffff, #e0e0e0);
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        text-decoration: none;
        color: #fff;
        transition: all 0.3s ease;
        overflow: hidden;
        position: relative;
    }

        .action-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.1);
            opacity: 0;
            transition: opacity 0.3s ease;
            z-index: 0;
        }

        .action-card:hover::before {
            opacity: 1;
        }

        .action-card:hover {
            transform: translateY(-10px) scale(1.03);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        .action-card i {
            font-size: 3rem;
            margin-bottom: 15px;
            z-index: 1;
            transition: transform 0.4s ease;
        }

        .action-card:hover i {
            transform: scale(1.2) rotate(10deg);
        }

        .action-card h3 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 8px;
            z-index: 1;
        }

        .action-card p {
            font-size: 1rem;
            text-align: center;
            padding: 0 15px;
            z-index: 1;
            opacity: 0.9;
        }

    /* Specific Card Styles */
    .assets-card {
        background: linear-gradient(135deg, #1976d2, #42a5f5);
    }

    .renters-card {
        background: linear-gradient(135deg, #455a64, #78909c);
    }

    .requests-card {
        background: linear-gradient(135deg, #fb8c00, #ffcc80);
    }

    .history-card {
        background: linear-gradient(135deg, #00acc1, #4dd0e1);
    }

    /* Section Title */
    .section-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #1976d2;
        margin: 35px 0 25px;
        position: relative;
        display: inline-block;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 50%;
            height: 3px;
            background: #42a5f5;
            border-radius: 2px;
        }

    /* Table Styles */
    .table-container {
        overflow-x: auto;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

    .request-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: #fff;
    }

        .request-table th, .request-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #eceff1;
        }

        .request-table th {
            background: #1976d2;
            color: #fff;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.95rem;
            letter-spacing: 0.5px;
        }

        .request-table td {
            color: #37474f;
            font-size: 0.95rem;
        }

        .request-table tr:hover {
            background: #e3f2fd;
        }

        .request-table .btn-sm {
            padding: 6px 12px;
            font-size: 0.9rem;
            margin: 0 4px;
            border-radius: 20px;
        }

    .action-form {
        display: inline-block;
    }

    .no-data {
        text-align: center;
        color: #90a4ae;
        font-size: 1.1rem;
        margin: 25px 0;
        font-style: italic;
    }

    /* Buttons (for Approve/Reject) */
    .btn {
        padding: 12px 28px;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        border-radius: 25px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        color: #fff;
    }

    .btn-success {
        background: #43a047;
    }

    .btn-danger {
        background: #d32f2f;
    }

    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    /* Animations */
    .animate__animated.animate__fadeInUp {
        animation: fadeInUp 0.6s ease-out;
    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .dashboard-title

    {
        font-size: 2.5rem;
    }

    .dashboard-card {
        padding: 25px;
    }

    .card-title {
        font-size: 1.75rem;
    }

    .action-cards {
        grid-template-columns: 1fr; /* Stack cards on smaller screens */
    }

    .action-card {
        height: 180px;
    }

        .action-card i {
            font-size: 2.5rem;
        }

        .action-card h3 {
            font-size: 1.3rem;
        }

    .request-table {
        display: block;
        overflow-x: auto;
    }

        .request-table td:before {
            content: attr(data-label);
            font-weight: bold;
            display: block;
            color: #1976d2;
        }

    }

    @@media (max-width: 480px) {
        .action-card

    {
        height: 160px;
    }

    .action-card h3 {
        font-size: 1.2rem;
    }

    .action-card p {
        font-size: 0.9rem;
    }

    }
</style>

<!-- Optional: Include Animate.css for animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />