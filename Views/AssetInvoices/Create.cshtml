@model EnterpriseManagementApp.Models.Rentals.AssetInvoice

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>AssetInvoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="CustomerId" class="control-label"></label>
                <input asp-for="CustomerId" class="form-control" value="@ViewData["CustomerId"]"></>
            </div>
            <div class="form-group" hidden>
                <label asp-for="AssetId" class="control-label"></label>
                <input asp-for="AssetId" class="form-control" value="@ViewData["AssetId"]"></>
            </div>
            <div class="form-group">
                <label asp-for="DatePaid" class="control-label"></label>
                <input asp-for="DatePaid" class="form-control" type="datetime" readonly id="datePaid"/>
                <span asp-validation-for="DatePaid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmmountPaid" class="control-label"></label>
                <input asp-for="AmmountPaid" class="form-control" />
                <span asp-validation-for="AmmountPaid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="CustomerOccupancyHistory" class="btn btn-secondary">Back to List</a>
    @* <a asp-action="Index">Back to List</a> *@
</div>


<script>
    // Set the default value of the Start field to today's date using JavaScript
    document.getElementById('datePaid').value = new Date().toISOString().split('T')[0];

</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
