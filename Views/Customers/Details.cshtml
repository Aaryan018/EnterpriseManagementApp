@model EnterpriseManagementApp.Models.ApplicationUser

@{
    ViewData["Title"] = "Customer Details";
}

<div class="dashboard-wrapper">
    <header class="dashboard-header">
        <h1 class="dashboard-title">@ViewData["Title"]</h1>
    </header>

    <main class="dashboard-container">
        <section class="dashboard-card @(User.IsInRole("Manager") ? "manager-card" : "customer-card")">
            <h2 class="card-title">Customer Details</h2>
            <div class="customer-details">
                <dl class="details-list">
                    <dt>Full Name</dt>
                    <dd>@Html.DisplayFor(model => model.FullName)</dd>
                    <dt>Address</dt>
                    <dd>@Html.DisplayFor(model => model.Address)</dd>
                    <dt>Phone Number</dt>
                    <dd>@Html.DisplayFor(model => model.PhoneNumber)</dd>
                    <dt>Email</dt>
                    <dd>@Html.DisplayFor(model => model.Email)</dd>
                    <dt>Emergency Contact</dt>
                    <dd>@Html.DisplayFor(model => model.EmergencyContact)</dd>
                </dl>
                <div class="details-actions">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    @if (User.IsInRole("Manager"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                    }
                </div>
            </div>
        </section>
    </main>
</div>

<style>
    .customer-details {
        padding: 20px 0;
    }

    .details-list {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 10px;
    }

        .details-list dt {
            font-weight: 600;
            color: #333;
        }

        .details-list dd {
            margin: 0;
            color: #555;
        }

    .details-actions {
        margin-top: 20px;
        display: flex;
        gap: 10px;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    @@media (max-width: 768px) {
        .details-list

    {
        grid-template-columns: 1fr;
    }

    }
</style>