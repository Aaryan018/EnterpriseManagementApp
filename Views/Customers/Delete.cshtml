@model EnterpriseManagementApp.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete Renter";
}

<div class="dashboard-wrapper">
    <header class="dashboard-header">
        <h1 class="dashboard-title">@ViewData["Title"]</h1>
    </header>

    <main class="dashboard-container">
        <section class="dashboard-card manager-card">
            <h2 class="card-title">Delete Renter</h2>
            <div class="delete-confirmation">
                <p>Are you sure you want to delete this renter?</p>
                <dl class="details-list">
                    <dt>Full Name</dt>
                    <dd>@Html.DisplayFor(model => model.FullName)</dd>
                    <dt>Address</dt>
                    <dd>@Html.DisplayFor(model => model.Address)</dd>
                </dl>
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-actions">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </section>
    </main>
</div>

<style>
    .delete-confirmation {
        padding: 20px 0;
    }

    .details-list {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 10px;
        margin-bottom: 20px;
    }

        .details-list dt {
            font-weight: 600;
            color: #333;
        }

        .details-list dd {
            margin: 0;
            color: #555;
        }

    .form-actions {
        margin-top: 20px;
        display: flex;
        gap: 10px;
    }
</style>