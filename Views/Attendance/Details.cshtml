@model Attendance

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Attendance</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClockedInTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClockedInTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClockedOutTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClockedOutTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Event.Id)
        </dd>
    </dl>
</div>

<div>
    @if (Model.ClockedInTime == null)
    {
        <form method="post" asp-action="ClockIn" asp-route-id="@Model.AttendanceId">
            <button type="submit" class="btn btn-success">Clock In</button>
        </form>
    }
    else if (Model.ClockedOutTime == null)
    {
        <form method="post" asp-action="ClockOut" asp-route-id="@Model.AttendanceId">
            <button type="submit" class="btn btn-danger">Clock Out</button>
        </form>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.AttendanceId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
