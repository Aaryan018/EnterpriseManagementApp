@model IEnumerable<EnterpriseManagementApp.Models.Asset>

@{
    ViewData["Title"] = "Asset Index";
}

<div class="assets-wrapper">
    <header class="assets-header">
        <h1 class="assets-title">Asset List</h1>
        <p class="assets-subtitle">Manage your assets with ease and precision</p>
    </header>

    <div class="assets-actions">
        <a class="btn btn-create" href="/Assets/Create"><i class="fas fa-plus"></i> Create New Asset</a>
    </div>

    <div class="table-container">
        <table class="assets-table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.RentRate)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Type)</th>
                    <th>@Html.DisplayNameFor(model => model.Value)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.UpdatedAt)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RentRate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Type)</td>
                        <td>@Html.DisplayFor(modelItem => item.Value)</td>
                        <td>
                            <span class="status-badge status-@(item.Status ? "active" : "inactive")">
                                @(item.Status ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                        <td class="action-buttons">
                            <a class="btn btn-edit" href="/Assets/Edit/@item.AssetId"><i class="fas fa-edit"></i> Edit</a>
                            <a class="btn btn-details" href="/Assets/Details/@item.AssetId"><i class="fas fa-info-circle"></i> Details</a>
                            <a class="btn btn-delete" href="/Assets/Delete/@item.AssetId"><i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Back Button -->
    <div class="back-button">
        <a class="btn btn-back" href="/Home/Index"><i class="fas fa-arrow-left"></i> Back to Dashboard</a>
    </div>
</div>

<style>
    /* Wrapper */
    .assets-wrapper {
        max-width: 1400px;
        margin: 40px auto;
        padding: 0 20px;
    }

    /* Header */
    .assets-header {
        text-align: center;
        margin-bottom: 30px;
        animation: fadeIn 0.5s ease-in;
    }

    .assets-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1a237e;
    }

    .assets-subtitle {
        font-size: 1.2rem;
        color: #666;
        margin-top: 10px;
    }

    /* Actions */
    .assets-actions {
        margin-bottom: 20px;
        text-align: right;
    }

    .btn-create {
        background-color: #1976d2;
        color: white;
        padding: 12px 24px;
        font-size: 1.1rem;
        font-weight: 500;
        border-radius: 6px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .btn-create i {
            margin-right: 8px;
        }

        .btn-create:hover {
            background-color: #1565c0;
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    /* Table Container */
    .table-container {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        overflow-x: auto;
    }

    .assets-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 1rem;
    }

        .assets-table thead {
            background: linear-gradient(90deg, #1e3a8a 0%, #3b82f6 100%);
            color: #ffffff;
        }

        .assets-table th {
            padding: 15px;
            font-weight: 600;
            text-align: left;
        }

        .assets-table tbody tr {
            border-bottom: 1px solid #e0e0e0;
            transition: background-color 0.3s ease;
        }

            .assets-table tbody tr:hover {
                background-color: #f5f7fa;
            }

        .assets-table td {
            padding: 15px;
            vertical-align: middle;
        }

    /* Status Badge */
    .status-badge {
        display: inline-block;
        padding: 5px 10px;
        border-radius: 12px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .status-active {
        background-color: #e8f5e9;
        color: #2e7d31;
    }

    .status-inactive {
        background-color: #ffebee;
        color: #c62828;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 8px 16px;
        font-size: 0.95rem;
        font-weight: 500;
        border-radius: 6px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        cursor: pointer;
        color: white;
    }

        .btn i {
            margin-right: 6px;
        }

    .btn-edit {
        background-color: #26c6da;
    }

    .btn-details {
        background-color: #607d8b;
    }

    .btn-delete {
        background-color: #dc3545;
    }

    .btn:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .btn-edit:hover {
        background-color: #00acc1;
    }

    .btn-details:hover {
        background-color: #455a64;
    }

    .btn-delete:hover {
        background-color: #c62828;
    }

    /* Back Button */
    .back-button {
        margin-top: 20px;
        text-align: center;
    }

    .btn-back {
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 6px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .btn-back i {
            margin-right: 8px;
        }

        .btn-back:hover {
            background-color: #5a6268;
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    /* Animations */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .assets-title

    {
        font-size: 2rem;
    }

    .assets-table th,
    .assets-table td {
        padding: 10px;
        font-size: 0.9rem;
    }

    .action-buttons {
        flex-direction: column;
        gap: 5px;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    }

    @@media (max-width: 576px) {
        .assets-actions

    {
        text-align: center;
    }

    .btn-create {
        width: 100%;
        justify-content: center;
    }

    }
</style>